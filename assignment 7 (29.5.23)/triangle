#include<bits/stdc++.h>

using namespace std;

int main() {
    int n;
    cin>>n;
    // triangle
    for(int i=0;i<n;i++){
        // gaps
        for(int j = n-1;j>i;j--){
            cout<<" ";
        }
        //stars
        for(int j=0;j<=i;j++){
            cout<<"* ";
        }
        cout<<endl;
    }
    
}
